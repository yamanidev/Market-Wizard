<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.purchase_entry.SelectSupplierController">
   <children>
      <TextField layoutX="80.0" layoutY="21.0" prefHeight="36.0" prefWidth="491.0" promptText="Search for supplier" />
      <TableView fx:id="suppliersTableView" layoutX="35.0" layoutY="81.0" prefHeight="344.0" prefWidth="607.0">
        <columns>
            <TableColumn fx:id="supplierIdCol" prefWidth="75.0" text="ID" />
          <TableColumn fx:id="supplierNameCol" prefWidth="171.0" text="Supplier " />
            <TableColumn fx:id="wilayaCol" prefWidth="146.0" text="Wilaya" />
            <TableColumn fx:id="phoneNumberCol" prefWidth="214.0" text="Phone Number" />
        </columns>
      </TableView>
      <Button fx:id="newBtn" layoutX="44.0" layoutY="441.0" mnemonicParsing="false" onAction="#newSupplierOnClick" prefHeight="36.0" prefWidth="129.0" text="New Supplier" />
      <Button fx:id="cancelBtn" layoutX="542.0" layoutY="441.0" mnemonicParsing="false" onAction="#cancelOnClick" prefHeight="36.0" prefWidth="129.0" text="Cancel" />
      <Button fx:id="confirmBtn" layoutX="379.0" layoutY="441.0" mnemonicParsing="false" onAction="#confirmOnClick" prefHeight="36.0" prefWidth="129.0" text="Confirm" />
   </children>
</AnchorPane>
